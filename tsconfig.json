{
  "compilerOptions": {
    "target": "ES2017",                   
    "module": "ESNext",                 
    "moduleResolution": "Node",         
    "strict": true,                     
    "outDir": "./dist",                 
    "rootDir": "./src",                 
    "esModuleInterop": true,            
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,               
    "sourceMap": true,
    "allowSyntheticDefaultImports": true                   
  },
  "include": ["src/**/*"],             
  "exclude": ["node_modules", "dist"]  
}
